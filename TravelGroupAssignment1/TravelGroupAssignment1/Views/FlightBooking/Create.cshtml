@model FlightBooking

@{
    ViewData["Title"] = "Create Flight Booking";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <!-- Displays mode-lreated validation errors here -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(Model => Model.BookingId)
            <div class="form-group">
                <label asp-for="Flight" class="control-label">Flight Number</label>
                <input asp-for="Flight" class="form-control" />
                <span asp-validation-for="Flight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightClass" class="control-label"></label>
                <input asp-for="FlightClass" class="form-control" />
                <span asp-validation-for="FlightClass" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-route-FlightId="@Model.FlightId" class=" btn btn-secondary">Back</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* this is what checks validation-for required annotation*@

}
