@model List<Car>
@{
    ViewData["Title"] = "List of Cars";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary">Create Car <i class="fa-solid fa-plus"></i></a>
<a asp-controller="CarRentalCompany" asp-action="Index" class="btn btn-primary">Rental Companies<i class="fa-solid fa-plus"></i></a>

@if (Model.Any()) // check if Model is null. 'Model' is reserved keyword to access the model
{
    <table class="table">

        <thead>
            <tr>
                <th>Car ID</th>
                <th>Make</th>
                <th>Model</th>
                <th>Price/Day</th>
                <th>Max Passengers</th>
                <th>Rental Company</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.CarId</td>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.PricePerDay</td>
                    <td>@car.MaxPassengers</td>
                    <td>@(car.Company == null ? "None" : car.Company.CompanyName)</td>
                    <td>
                        <a asp-controller="CarBooking" asp-action="Index" asp-route-carId="@car.CarId" class="btn btn.sm btn-secondary" role="button">Bookings<i class="fa-solid fa-list-check"></i></a>
                        <a asp-action="Details" asp-route-carId="@car.CarId" class="btn btn.sm btn-secondary" role="button">Details <i class="fa-solid fa-circle-info"></i></a>
                        <a asp-action="Edit" asp-route-carId="@car.CarId" class="btn btn.sm btn-secondary" role="button">Edit <i class="fa-regular fa-pen-to-square"></i></a>
                        <a asp-action="Delete" asp-route-carId="@car.CarId" class="btn btn.sm btn-danger" role="button">Delete <i class="fa-solid fa-circle-xmark"></i></a>
                    </td>

                </tr>
            }
        </tbody>

    </table>

}
else
{
    <p>No cars available</p>
}
