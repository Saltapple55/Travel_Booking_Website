@model List<Flight>
@{
    ViewData["Title"] = "List of Flights";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary">Create Flight <i class="fa-solid fa-plus"></i></a>
<a asp-controller="Flight" asp-action="Index" class="btn btn-primary">Flights<i class="fa-solid fa-plus"></i></a>

@if (Model.Any()) // check if Model is null. 'Model' is reserved keyword to access the model
{
    <!-- Flight Card-->
  <div class="container">
    <div class="column">
            @foreach (var flight in Model)
            {
                <div class="col-md-6">
                    <div class="flight-card">
                        <div class="flight-card-body">
                            <div class="flight-info">
                                <p><i class="fa-solid fa-plane-departure"></i> @flight.DepartTime <i class="fa-solid fa-plane-arrival"></i> @flight.ArrivalTime</p>
                                <p><strong>From:</strong> @flight.From <strong>To:</strong> @flight.To</p>
                                <p><i class="fa-solid fa-plane-up"></i> @flight.Airline</p>
                            </div>
                            <div class="flight-price">$500</div>
                        </div>
                        <a asp-controller="FlightBooking" asp-action="Create" asp-route-flightId="@flight.FlightId" class="btn btn-primary">Book</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No flights available</p>
}


