<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelGroupAssignment1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelGroupAssignment1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TravelGroupAssignment1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Index">Car</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Hotel" asp-action="Index">Hotel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Flight" asp-action="Index">Flight</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin Dashboard
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="HotelIndex">Hotel Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="CarIndex">Car Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="FlightIndex">Flight Dashboard</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="hotel-tab" data-bs-toggle="tab" data-bs-target="#hotel" type="button" role="tab" aria-controls="hotel" aria-selected="false">Hotel</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="flight-tab" data-bs-toggle="tab" data-bs-target="#flight" type="button" role="tab" aria-controls="flight" aria-selected="false">Flight</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="car-tab" data-bs-toggle="tab" data-bs-target="#car" type="button" role="tab" aria-controls="car" aria-selected="false">Car</button>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Hotel Tab -->
                <div class="tab-pane active" id="hotel" role="tabpanel" aria-labelledby="hotel-tab" tabindex="0">
                    <div id="hotelForm" class="search-form">
                        <h3>Hotel Search</h3>
                        <form class="row row-cols-lg-auto g-3 align-items-center" asp-controller="Dashboard" asp-action="HotelSearch">
                            <div class="col-12">
                                <label for="location" class="control-label">Location</label>
                                <input id="location" name="location" class="form-control" placeholder="Going To" />
                            </div>

                            <div class="col-12">
                                <label for="specificSizeInputName">Start Date</label>
                                <input type="date" class="form-control" id="specificSizeInputName" placeholder="Start Date">
                            </div>

                            <div class="col-12">
                                <label for="specificSizeInputName">End Date</label>
                                <input type="date" class="form-control" id="specificSizeInputName" placeholder="End Date">
                            </div>

                            <div class="col-12">
                                <label for="capacity" class="control-label">Travellers</label>
                                <input id="capacity" name="capacity" type="number" class="form-control" placeholder="How many passengers" />
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Flight Tab -->
                <div class="tab-pane" id="flight" role="tabpanel" aria-labelledby="flight-tab" tabindex="0">
                    <div id="flightForm" class="search-form">
                        <h3>Flight Search</h3>
                        <form class="row row-cols-lg-auto g-3 align-items-center" asp-controller="Dashboard" asp-action="FlightSearch">
                            <div class="col-12">
                                <label for="specificSizeInputName">Leaving From</label>
                                <input type="text" class="form-control" id="specificSizeInputName" placeholder="Toronto">
                            </div>

                            <div class="col-12">
                                <label for="specificSizeInputName">Going To</label>
                                <input type="text" class="form-control" id="specificSizeInputName" placeholder="New York">
                            </div>

                            <div class="col-12">
                                <label for="specificSizeInputName">Start Date</label>
                                <input type="date" class="form-control" id="specificSizeInputName" placeholder="Start Date">
                            </div>

                            <div class="col-12">
                                <label for="specificSizeInputName">End Date</label>
                                <input type="date" class="form-control" id="specificSizeInputName" placeholder="End Date">
                            </div>

                            <div class="col-12">
                                <label for="specificSizeInputName">Passengers</label>
                                <input type="number" class="form-control" id="specificSizeInputName" placeholder="2">
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Car Tab -->
                <div class="tab-pane" id="car" role="tabpanel" aria-labelledby="car-tab" tabindex="0">
                    <div id="carForm" class="search-form">
                        <h3>Car Search</h3>
                        <form class="row row-cols-lg-auto g-3 align-items-center" asp-controller="Dashboard" asp-action="CarSearch">
                            <div class="col-12">
                                <label for="location" class="control-label">Pick Up At</label>
                                <input required id="location" name="location" class="form-control" placeholder="Toronto" />
                            </div>

                            <div class="col-12">
                                <label for="startDate" class="control-label">Start Date</label>
                                <input required id="startDate" name="startDate" type="date" class="form-control" />
                            </div>

                            <div class="col-12">
                                <label for="endDate" class="control-label">End Date</label>
                                <input required id="endDate" name="endDate" type="date" class="form-control" />
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TravelGroupAssignment1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
