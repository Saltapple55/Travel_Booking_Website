@{
	Layout = "_DashboardSearch";
}

@model List<Flight>
@{
    ViewData["Title"] = "List of Flights";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="FlightCreate" class="btn btn-primary">Create Flight <i class="fa-solid fa-plus"></i></a>

@if (Model.Any()) // check if Model is null. 'Model' is reserved keyword to access the model
{
    <table class="table">

        <thead>
            <tr>
                <th>Flight ID</th>
                <th>AirLine</th>
                <th>Price</th>
                <th>From</th>
                <th>To</th>
                <th>DepartTime</th>
                <th>ArrivalTime</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightId</td>
                    <td>@flight.Airline</td>
                    <td>@flight.Price</td>
                    <td>@flight.From</td>
                    <td>@flight.To</td>
                    <td>@flight.DepartTime</td>
                    <td>@flight.ArrivalTime</td>

                    <td>
                        <a asp-controller="FlightBooking" asp-action="Index" asp-route-flightId="@flight.FlightId" class="btn btn.sm btn-secondary" role="button">Bookings<i class="fa-solid fa-list-check"></i></a>

                        <a asp-controller="Dashboard" asp-action="FlightDetails" asp-route-flightId="@flight.FlightId" class="btn btn.sm btn-secondary" role="button">Details <i class="fa-solid fa-circle-info"></i></a>
                        <a asp-controller="Dashboard" asp-action="FLightEdit" asp-route-flightId="@flight.FlightId" class="btn btn.sm btn-secondary" role="button">Edit <i class="fa-regular fa-pen-to-square"></i></a>
                        <a asp-controller="Dashboard" asp-action="FlightDelete" asp-route-flightId="@flight.FlightId" class="btn btn.sm btn-danger" role="button">Delete <i class="fa-solid fa-circle-xmark"></i></a>
                    </td>

                </tr>
            }
        </tbody>

    </table>

}
else
{
    <p>No flights available</p>
}