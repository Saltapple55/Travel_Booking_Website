@using TravelGroupAssignment1.Models;

@{
	Layout = "_FlightSearchItem";
}

@model List<Flight>
@{
    ViewData["Title"] = "List of Flights";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="FlightCreate" class="btn btn-primary">Create Flight <i class="fa-solid fa-plus"></i></a>

@if (Model.Any()) // check if Model is null. 'Model' is reserved keyword to access the model
{
    <table class="table">

        <thead>
            <tr>
                <th>Flight ID</th>
                <th>AirLine</th>
                <th>Price</th>
                <th>From</th>
                <th>To</th>
                <th>DepartTime</th>
                <th>ArrivalTime</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightId</td>
                    <td>@flight.Airline</td>
                    <td>@flight.Price</td>
                    <td>@flight.From</td>
                    <td>@flight.To</td>
                    <td>@Html.DisplayFor(modelItem => flight.DepartTime)</td>
                    <td>@flight.ArrivalTime</td>

                    <td>
                        @* Need to have a list of user to book the flight for specific user *@
                        @* <a asp-controller="FlightBooking" asp-action="Index" asp-route-flightId="@flight.FlightId" class="btn btn.sm btn-secondary" role="button">Bookings<i class="fa-solid fa-list-check"></i></a> *@
                        <a asp-controller="Dashboard" asp-action="FlightDetails" asp-route-flightId="@flight.FlightId" class="btn btn.sm btn-info" role="button">Details </a>
                        <a asp-controller="Dashboard" asp-action="FLightEdit" asp-route-flightId="@flight.FlightId" class="btn btn.sm btn-warning" role="button">Edit</a>
                        <a asp-controller="Dashboard" asp-action="FlightDelete" asp-route-flightId="@flight.FlightId" class="btn btn.sm btn-danger" role="button">Delete</a>
                    </td>

                </tr>
            }
        </tbody>

    </table>

}
else
{
    <p>No flights available</p>
}